.main {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: red;
  overflow-y: auto;
}

/* 搜索框*/
.search {
  display: flex;
  justify-content: center;
  background-color: white;
  height: 100rpx;
  align-items: center;
}

.left {
  flex: 1;
  padding-left: 30rpx;
}

.input {
  flex: 8;
  text-align: center;
}

.right {
  flex: 1;
}

.line {
  border-bottom: 1rpx solid #666666;
  margin: 0 40rpx;
}

/**课堂详情布局**/
.class_wrap {
  display: flex;
  height: auto;
  flex-direction: column;
  background-color: white;
  border: 1rpx solid black;
  margin: 5%;
  border-radius: 30rpx;
}
.class_title{
  display: flex;
  align-items: center;
}

.class_hint_side {
  width: 10rpx;
  height: 30rpx;
  background-color: #00BFA5;
}

.class_hint_wrap {
  height: 80rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.class_hint {
  margin-left: 30rpx;
  font-weight: bold;
  font-size: 30rpx;
}
.class_check{
  display: flex;
  font-weight: bold;
  font-size: 30rpx;
  margin-right: 40rpx;
}

/**课堂item**/
.class_layout_wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  justify-content: space-between;
  margin: 0 40rpx;
  border-bottom: 1rpx solid #666666;
}

.class_layout_wrap:nth-last-child(1) {
  border-bottom: 0;
}

.layout_hint {
  font-size: 25rpx;
  color: black;
}

.layout_msg {
  font-size: 25rpx;
  color: black;
}