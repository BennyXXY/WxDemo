.main {
  padding: 10rpx;
}

/* 搜索框*/
.search {
  display: flex;
  justify-content: center;
}

.left {
  flex: 1;
  padding-left: 10rpx;
}

.input {
  flex: 8;
  text-align: center;
}

.right {
  flex: 1;
}

/**课程列表**/
.item_wrap {
  margin-top: 10rpx;
}

.item {
  display: flex;
  flex-direction: row;
  height: 200rpx;
  border: 1rpx solid #666666;
  justify-content: space-between;
  align-items:center;
  margin-bottom: 10rpx;
}
.item_left{
  padding-left: 30rpx;
}
.item_left text{
  font-size: 20rpx;
}
.item_lef_tch{
  margin-right: 10rpx;
}
.item_tag{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item_tag_tx{
  line-height: 15rpx;
  padding-right: 10rpx;
}
.item_right{
  display: flex;
}
.item_right .item_btn{
  width: 200rpx;
  font-size: 17rpx; 
  margin-right: 20rpx;
  border: 1rpx solid #666666;
}

.point{
  width: 15rpx;
  height: 15rpx;
  background: red;
  border-radius: 50%;
  position: relative;
  right: 50rpx;
  top: 5rpx;
}